#!/bin/bash

NAME="interop_api"                            # Name of the application
FLASKDIR=                                     # This Flask project directory
SOCKFILE=                                     # we will communicte using this unix socket
USER=                                         # the user to run as
GROUP=                                        # the group to run as
NUM_WORKERS=3                                 # how many worker processes should Gunicorn spawn
DJANGO_SETTINGS_MODULE=hello.settings         # which settings file should Django use
FLASK_WSGI_MODULE=api.wsgi                    # WSGI module name
VENV=                                         # Path of the python virtual environment

echo "Starting $NAME as `whoami`"

# Activate the virtual environment
cd $FLASKDIR
source $VENV/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$FLASKDIR:$PYTHONPATH

# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR

# Start your Flask Unicorn
# Programs meant to be run under supervisor should not daemonize themselves (do not use --daemon)
exec $VENV/gunicorn ${FLASK_WSGI_MODULE}:app \
  --name $NAME \
  --bind=unix:$SOCKFILE \
  --workers $NUM_WORKERS \
  --user=$USER --group=$GROUP \
  --log-level=debug \
  --log-file=-
