#!/bin/bash

NAME="interop_api"                            
FLASKDIR=/opt/interop-api/                     
SOCKFILE=/opt/interop-api/run/gunicorn.sock       
USER=fournst2
GROUP=ngs-admin
NUM_WORKERS=3                                 # how many worker processes should Gunicorn spawn
FLASK_WSGI_MODULE=API.wsgi                    # WSGI module name
VENV=/opt/interop-api/interop_venv/bin
LOGFILE=$FLASKDIR/logs/interop.log

# Activate the virtual environment
cd $FLASKDIR
source $VENV/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$FLASKDIR:$PYTHONPATH

# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR

# Start your Flask Unicorn
# Programs meant to be run under systemd should not daemonize themselves (do not use --daemon)
exec $VENV/gunicorn ${FLASK_WSGI_MODULE}:app \
  --name $NAME \
  --bind=unix:$SOCKFILE \
  --workers $NUM_WORKERS \
  --user=$USER --group=$GROUP \
  --log-level=debug \
  --log-file=$LOGFILE
